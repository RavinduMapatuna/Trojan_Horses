<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserProfileUpdate">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#151C25"
        android:padding="20dp">

        <Button
            android:id="@+id/logout_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:backgroundTint="@color/white"
            android:text="Logout"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_above="@id/uploadpic_btn"
            android:layout_centerInParent="true"
            android:src="@drawable/profilepic" />


        <Button
            android:id="@+id/uploadpic_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/white"
            android:text="Upload Picture"
            android:textColor="@color/black"
            android:textSize="12dp" />



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#151C25"
        android:orientation="vertical"

        android:padding="20dp">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name_box"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="10dp"
            android:hint="Full Name"
            android:textColorHint="#808080"
            android:visibility="visible"          >


        </com.google.android.material.textfield.TextInputLayout>

        <ImageView

            android:id="@+id/userView"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginTop="-50dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/user" />



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="70dp"
            android:hint="abcd@email.com"
            android:textColorHint="#808080"
            tools:visibility="visible"/>





        <ImageView

            android:id="@+id/emailView"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginTop="-58dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/email" />




        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="70dp"
            android:hint="Password"
            android:textColorHint="#808080"/>

        <ImageView

            android:id="@+id/passwordView"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginTop="-58dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/Password" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="70dp"
            android:hint="Re-enter Password"
            android:textColorHint="#808080"/>

        <ImageView

            android:id="@+id/re_passwordView"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginTop="-49dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/Password" />
        <Button
            android:id="@+id/submit_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:onClick="Update"
            android:text="Submit"
            android:textColor="@color/black">

        </Button>

        <Button

            android:id="@+id/delete_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="-45dp"
            android:backgroundTint="@color/white"
            android:text="Delete profile"
            android:textColor="@color/black"
            android:textSize="13dp">


        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <Button

            android:id="@+id/home_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="-25dp"
            android:drawableBottom="@drawable/home"
            android:src="@drawable/home"
            app:iconPadding="28dp">

        </Button>

        <Button

            android:id="@+id/reel_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="-45dp"
            app:icon="@drawable/reel">

        </Button>

        <Button

            android:id="@+id/tv_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="-45dp"
            app:icon="@drawable/tv">

        </Button>

        <Button

            android:id="@+id/user_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="-45dp"
            app:icon="@drawable/user"
            app:iconPadding="28dp">

        </Button>

    </LinearLayout>